<div class="user-menu js-user-menu">
  {{!-- Member Links --}}
  {{#if @member}}
    <div class="member-user">
      <div class="member-info flex flex-col">
        <div class="member-name">{{@member.name}}</div>
        <span class="member-email">{{@member.email}}</span>
      </div>
    </div>
    
    {{!-- Upgrade link --}}
    {{#unless @member.paid}}
      {{#link href="/membership/" class="upgrade-link"}}
        {{> icon name="trending-up" size="xs"}}{{t "Upgrade"}}
      {{/link}}
    {{/unless}}

    {{!-- Account link --}}
    <a href="/account/" class="account-link"{{#if @custom.use_portal_links}} data-portal="account"{{/if}}>
      {{> icon name="user" size="xs"}}{{t "Account"}}
    </a>

    {{!-- Sign out link --}}
    {{#link href="javascript:" data-members-signout="" class="signout-link"}}
      {{> icon name="logout" size="xs"}}{{t "Sign out"}}
    {{/link}}
  {{else}}
    {{!-- Sign up link --}}
    <a class="signup-link" href="/signup/"{{#if @custom.use_portal_links}} data-portal="signup"{{/if}}>
      {{> icon name="arrow-up-right" size="xs"}}{{t "Sign up"}}
    </a>

    {{!-- Sign in link --}}
    <a class="signin-link" href="/signin/"{{#if @custom.use_portal_links}} data-portal="signin"{{/if}}>
      {{> icon name="login" size="xs"}}{{t "Sign in"}}
    </a>
  {{/if}}

  {{!-- Dark/Light Theme --}}
  <button class="btn--toggle btn-theme-toggle js-theme-toggle" 
    title="{{t "Theme Toggle"}}" aria-label="{{t "Theme Toggle"}}">
    {{> icon name="brightness-up" size="xs"}}
    {{> icon name="brightness-down" size="xs"}}
    <span>{{t "Theme"}}</span>
  </button>
</div>